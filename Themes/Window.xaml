<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowBase" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{DynamicResource Basic}"/>
        <Setter Property="Foreground" Value="{DynamicResource Light}"/>
    </Style>
    <ControlTemplate x:Key="WindowDialog" TargetType="{x:Type Window}">
        <Border CornerRadius="6" BorderThickness="2" BorderBrush="{DynamicResource Element}" Background="{DynamicResource Area}">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <Style x:Key="Dialog" TargetType="{x:Type Window}" BasedOn="{StaticResource WindowBase}">
        <Setter Property="WindowState" Value="Normal"/>
        <Setter Property="Height" Value="150"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="Topmost" Value="True"/>
        <Setter Property="Width" Value="450"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Template" Value="{StaticResource WindowDialog}"/>
    </Style>
</ResourceDictionary>