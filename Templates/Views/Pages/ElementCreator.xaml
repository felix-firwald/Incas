<UserControl x:Class="Incas.Templates.Views.Pages.ElementCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incas.Templates.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{DynamicResource Dark}" Grid.ColumnSpan="2" Margin="5,5,5,5" CornerRadius="5" BorderThickness="0" BorderBrush="{DynamicResource Element}" Grid.Row="1">
        <ScrollViewer Style="{DynamicResource ScrollViewerBase}">
            <StackPanel x:Name="ContentPanel">
                
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
