        <ResourceDictionary>
            <conv:PathDataToGeometryConverter x:Key="PathDataToGeometryConverter"/>
            <conv:IEColorToBrushConverter x:Key="IEColorToBrushConverter"/>
        </ResourceDictionary>
    </Window.Resources>
