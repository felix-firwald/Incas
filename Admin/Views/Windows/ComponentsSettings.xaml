                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Path Grid.RowSpan="2" Fill="White" Stretch="Uniform" Height="20" Width="20" Data="{Binding SelectedIconPath, Converter={StaticResource PathDataToGeometryConverter}}"/>
