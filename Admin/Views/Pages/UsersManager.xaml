<UserControl x:Class="Incas.Admin.Views.Pages.UsersManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incas.Admin.Views.Pages" xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Style="{DynamicResource MainGroupBox}" Header="ПОЛЬЗОВАТЕЛИ">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <fa:FontAwesome Style="{DynamicResource IconButton}" Icon="PlusCircle" MouseDown="AddClick"/>
                <fa:FontAwesome Style="{DynamicResource IconButton}" Icon="Refresh" MouseDown="RefreshClick"/>
            </StackPanel>
            <StackPanel x:Name="UsersList" Grid.Row="1">

            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
