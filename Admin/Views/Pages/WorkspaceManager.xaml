                </DataGrid>
            </Grid>
        </GroupBox>
        <GridSplitter Grid.RowSpan="2"/>
        <GridSplitter Style="{StaticResource SplitterHorizontal}" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Row="1"/>
