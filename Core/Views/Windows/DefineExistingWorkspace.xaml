<Window x:Class="Incas.Core.Views.Windows.DefineExistingWorkspace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incas.Core.Views.Windows"
        mc:Ignorable="d"
        Title="DefineExistingWorkspace" Height="125" Width="350" Style="{DynamicResource Dialog}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="name" Style="{DynamicResource TextBoxMain}" Grid.Row="0" Tag="Имя рабочего пространства" Text="{Binding WorkspaceName}" Grid.ColumnSpan="2" Margin="5,5,5,5" />
        <TextBox x:Name="path" Style="{DynamicResource TextBoxMain}" Grid.Row="1" Tag="Путь к рабочему пространству" Text="{Binding WorkspacePath}" Grid.ColumnSpan="2" Margin="5,5,5,5" />
        <Button Style="{DynamicResource ButtonMain}" Grid.Row="2" Content="Сохранить" Click="SaveClick" />
    </Grid>
</Window>
