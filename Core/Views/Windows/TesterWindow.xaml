            <Rectangle Stroke="{DynamicResource Element}" StrokeThickness="1" Margin="5,0,5,0" />
            <StackPanel x:Name="CustomTabs">
                <Button Style="{StaticResource ButtonMain}" Content="Запустить сервер" Click="RunServerClick"/>
                <Button Style="{StaticResource ButtonMain}" Content="Подключиться к серверу" Click="ConnectToServerClick"/>
                <Button Style="{StaticResource ButtonMain}" Content="Отправить сообщение серверу" Click="MessageToServerClick"/>
                <Button Style="{StaticResource ButtonMain}" Content="Отправить сообщение клиенту" Click="MessageToClientClick"/>
            </StackPanel>

        </StackPanel>

        <GridSplitter x:Name="gridSplitter" Grid.Column="1" HorizontalAlignment="Left" ResizeDirection="Columns" Grid.Row="0" Margin="1,0,0,0" />

        <Border x:Name="border" Margin="5" Grid.Column="1" Grid.Row="0" Cursor="">
            <TabControl x:Name="TabMain" Style="{StaticResource TabControlMain}" ItemContainerStyle="{StaticResource TabItemRemovable}" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5">
                <TabControl.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TabControl.RenderTransform>

            </TabControl>
        </Border>
        <Border x:Name="border1" Background="#FF2D2D33" Grid.Row="1" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="stackPanel1" Orientation="Horizontal" Margin="15,0,0,0" RenderTransformOrigin="0.5,0.5">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </StackPanel.RenderTransform>
                    <Label Style="{StaticResource LabelElement}" Content="© INCAS 2025" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="40" VerticalContentAlignment="Center"/>
                    <Image Height="30" Width="30" Source="/Core/Views/Windows/Logo.png" UseLayoutRounding="False" RenderOptions.BitmapScalingMode="Fant" Stretch="UniformToFill" Margin="12,0,12,0"/>

                    <Label Style="{StaticResource LabelElement}" Content="{Binding Version}" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Rectangle Fill="{DynamicResource Element}" Width="1" Margin="6"/>
                    <Label Style="{StaticResource LabelElement}" Content="Никакие права не защищены" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="40" Foreground="{DynamicResource Icon}" VerticalContentAlignment="Center">
                    </Label>
                </StackPanel>
                <Border x:Name="StatusBarContainer" Grid.Column="1">

                </Border>
            </Grid>

        </Border>
        <StackPanel x:Name="stackPanel" IsEnabled="False" Grid.Column="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Background="#252528" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
