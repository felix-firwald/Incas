<Window x:Class="Incas.Core.Views.Windows.WorkspaceLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incas.Core.Views.Windows"
        mc:Ignorable="d"
        Title="WorkspaceLoading" Height="250" Width="500" WindowStartupLocation="CenterScreen" Background="{StaticResource Black}" WindowStyle="None">
    <Border Background="{StaticResource Black}" BorderBrush="{StaticResource PrimaryMain}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="WorkspaceName" Text="???" FontFamily="{StaticResource Rubik}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
            <TextBlock Text="Пожалуйста, подождите. Выполняется загрузка компонентов."  FontFamily="{StaticResource Rubik}" Foreground="{DynamicResource DarkLight}" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ProgressBar BorderThickness="10" Margin="5" Foreground="{DynamicResource PrimaryMain}" BorderBrush="{DynamicResource Element}" IsIndeterminate="True" Height="2" Grid.Row="2"/>
        </Grid>
    </Border>
</Window>
