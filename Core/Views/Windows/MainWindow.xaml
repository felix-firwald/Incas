<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:pages="clr-namespace:Incas.Templates.Views.Pages" xmlns:pages1="clr-namespace:Incas.CustomDatabases.Views.Pages" xmlns:pages2="clr-namespace:Incas.Admin.Views.Pages" x:Name="window" x:Class="Incas.Core.Views.Windows.MainWindow"
        mc:Ignorable="d"
        Height="900"
        Width="1300"
        Style="{DynamicResource WindowBase}"
        WindowState="Maximized"
        Title="{Binding Title}"
        Closed="OnClosed"     
        MinHeight="700" MinWidth="900" PreviewKeyDown="window_PreviewKeyDown"
        Cursor="">

    <Grid Background="{DynamicResource Basic}">
        <Grid.RowDefinitions>
            <RowDefinition Height="395*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="140" MaxWidth="400"/>
            <ColumnDefinition Width="13*" />
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>


        <StackPanel x:Name="StackLeft" Grid.Row="0" Grid.Column="0" MinWidth="100" MaxWidth="450" Background="{StaticResource Area}" SizeChanged="OnResize" Cursor="">
            <TextBlock x:Name="Incubator" Style="{StaticResource TextBlockImportant}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DodgerBlue" Margin="15,25,15,25" Text="{Binding WorkspaceName, FallbackValue=Без имени}" TextWrapping="Wrap"/>
            

            <Rectangle Stroke="{DynamicResource Element}" StrokeThickness="8" Visibility="{Binding ModeratorFunctionVisibility}" />
            <Path x:Name="Logo" Fill="{StaticResource Element}" MaxHeight="50" MaxWidth="50" Width="auto" Height="auto" Data="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0 M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" HorizontalAlignment="Center" Stretch="UniformToFill" Margin="0,15,0,6"/>
            <TextBlock x:Name="LSurname" Foreground="White" Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center" AutomationProperties.IsRequiredForForm="True" TextTrimming="WordEllipsis"/>
            <TextBlock x:Name="LFullname" Foreground="White" Text="{Binding SecondName}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="WordEllipsis"/>
            <TextBlock x:Name="LPost" Foreground="{StaticResource GrayLight}" Margin="8,0,8,25" Text="{Binding Post, UpdateSourceTrigger=PropertyChanged, FallbackValue=Должность}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="WordEllipsis" />
            <Rectangle Stroke="{DynamicResource Element}" StrokeThickness="8" />

            <RadioButton x:Name="DocumentsRadio" Style="{StaticResource MenuButton}" GroupName="Tabs" IsChecked="True" Cursor="Hand" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Path Fill="{Binding ElementName=DocumentsRadio, Path=Foreground}" Data="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5m0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5" />
                    <Path Fill="{Binding ElementName=DocumentsRadio, Path=Foreground}" Data="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z"/>
                    <TextBlock Text="Документы" TextWrapping="WrapWithOverflow" Style="{DynamicResource TextBlockImportant}" FontSize="11" Foreground="{Binding ElementName=DocumentsRadio, Path=Foreground}" Grid.Column="1" TextTrimming="WordEllipsis" Cursor="" />
                </Grid>
            </RadioButton>
            <RadioButton x:Name="DatabaseRadio" Style="{DynamicResource MenuButton}" GroupName="Tabs" Cursor="Hand" Visibility="{Binding DatabaseVisibility}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Path Fill="{Binding ElementName=DatabaseRadio, Path=Foreground}" Data="M0 0h1v15h15v1H0zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5"/>
                    <TextBlock Text="Объекты данных" Style="{DynamicResource TextBlockImportant}" Foreground="{Binding ElementName=DatabaseRadio, Path=Foreground}" Cursor="" Grid.Column="1" TextTrimming="WordEllipsis" FontSize="11" />
                </Grid>
            </RadioButton>
            <StackPanel x:Name="CustomTabs">
                <!--<RadioButton Style="{StaticResource MenuButton}" GroupName="Tabs" Content="Приказ по личному составу"/>
                <RadioButton Style="{StaticResource MenuButton}" GroupName="Tabs" Content="Академическая справка"/>-->
            </StackPanel>
            <Rectangle Stroke="{DynamicResource Element}" StrokeThickness="8" Visibility="{Binding ModeratorFunctionVisibility}" />
            <RadioButton x:Name="SettingsRadio" Style="{DynamicResource MenuButton}" GroupName="Tabs" ToolTip="Настройки рабочего пространства" Visibility="{Binding AdminFunctionVisibility}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Path Fill="{Binding ElementName=SettingsRadio, Path=Foreground}" Data="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492M5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0"/>
                    <Path Fill="{Binding ElementName=SettingsRadio, Path=Foreground}" Data="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52zm-2.633.283c.246-.835 1.428-.835 1.674 0l.094.319a1.873 1.873 0 0 0 2.693 1.115l.291-.16c.764-.415 1.6.42 1.184 1.185l-.159.292a1.873 1.873 0 0 0 1.116 2.692l.318.094c.835.246.835 1.428 0 1.674l-.319.094a1.873 1.873 0 0 0-1.115 2.693l.16.291c.415.764-.42 1.6-1.185 1.184l-.291-.159a1.873 1.873 0 0 0-2.693 1.116l-.094.318c-.246.835-1.428.835-1.674 0l-.094-.319a1.873 1.873 0 0 0-2.692-1.115l-.292.16c-.764.415-1.6-.42-1.184-1.185l.159-.291A1.873 1.873 0 0 0 1.945 8.93l-.319-.094c-.835-.246-.835-1.428 0-1.674l.319-.094A1.873 1.873 0 0 0 3.06 4.377l-.16-.292c-.415-.764.42-1.6 1.185-1.184l.292.159a1.873 1.873 0 0 0 2.692-1.115z" Cursor=""/>
                    <TextBlock Text="Рабочее пространство" Style="{DynamicResource TextBlockImportant}" FontSize="11" Foreground="{Binding ElementName=SettingsRadio, Path=Foreground}" Grid.Column="1" TextTrimming="WordEllipsis" />
                </Grid>
            </RadioButton>
            <RadioButton x:Name="UsersRadio" Style="{DynamicResource MenuButton}" GroupName="Tabs" ToolTip="Управление пользователями" Visibility="{Binding AdminFunctionVisibility}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Path Fill="{Binding ElementName=UsersRadio, Path=Foreground}" Data="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m.256 7a4.5 4.5 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10q.39 0 .74.025c.226-.341.496-.65.804-.918Q8.844 9.002 8 9c-5 0-6 3-6 4s1 1 1 1zm3.63-4.54c.18-.613 1.048-.613 1.229 0l.043.148a.64.64 0 0 0 .921.382l.136-.074c.561-.306 1.175.308.87.869l-.075.136a.64.64 0 0 0 .382.92l.149.045c.612.18.612 1.048 0 1.229l-.15.043a.64.64 0 0 0-.38.921l.074.136c.305.561-.309 1.175-.87.87l-.136-.075a.64.64 0 0 0-.92.382l-.045.149c-.18.612-1.048.612-1.229 0l-.043-.15a.64.64 0 0 0-.921-.38l-.136.074c-.561.305-1.175-.309-.87-.87l.075-.136a.64.64 0 0 0-.382-.92l-.148-.045c-.613-.18-.613-1.048 0-1.229l.148-.043a.64.64 0 0 0 .382-.921l-.074-.136c-.306-.561.308-1.175.869-.87l.136.075a.64.64 0 0 0 .92-.382zM14 12.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0"/>
                    <TextBlock Text="Пользователи" Style="{DynamicResource TextBlockImportant}" FontSize="11" Foreground="{Binding ElementName=UsersRadio, Path=Foreground}" Grid.Column="1" TextTrimming="WordEllipsis" />
                </Grid>
            </RadioButton>
            <RadioButton x:Name="SessionsRadio" Style="{DynamicResource MenuButton}" GroupName="Tabs" ToolTip="Управление сессиями" Visibility="{Binding ModeratorFunctionVisibility}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Path Fill="{Binding ElementName=SessionsRadio, Path=Foreground}" Data="M6 2a.5.5 0 0 1 .47.33L10 12.036l1.53-4.208A.5.5 0 0 1 12 7.5h3.5a.5.5 0 0 1 0 1h-3.15l-1.88 5.17a.5.5 0 0 1-.94 0L6 3.964 4.47 8.171A.5.5 0 0 1 4 8.5H.5a.5.5 0 0 1 0-1h3.15l1.88-5.17A.5.5 0 0 1 6 2"/>
                    <TextBlock Text="Сессии" Style="{DynamicResource TextBlockImportant}" FontSize="11" Foreground="{Binding ElementName=SessionsRadio, Path=Foreground}" Grid.Column="1" TextTrimming="WordEllipsis" />
                </Grid>
            </RadioButton>
        </StackPanel>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" ResizeDirection="Columns" Grid.Row="0" Margin="1,0,0,0" />

        <Border Margin="8,8,8,8" Grid.Column="1" Grid.Row="0" Cursor="">
            <TabControl Background="{DynamicResource Basic}" BorderBrush="{x:Null}">
                <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=DocumentsRadio, Path=IsChecked}" Background="{x:Null}" BorderBrush="{x:Null}">
                    <pages:UC_Templator />
                </TabItem>
                <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=MailRadio, Path=IsChecked}" Background="{x:Null}">

                </TabItem>
                <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=DatabaseRadio, Path=IsChecked}" Background="{x:Null}">
                    <pages1:CustomDatabaseMain/>
                </TabItem>
                <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=SettingsRadio, Path=IsChecked}" Background="{x:Null}">
                    <pages2:WorkspaceManager/>
                </TabItem>
                <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=UsersRadio, Path=IsChecked}" Background="{x:Null}">
                    <pages2:UsersManager/>
                </TabItem>
                <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=SessionsRadio, Path=IsChecked}" Background="{x:Null}">
                    <pages2:SessionsManager/>
                </TabItem>
            </TabControl>
        </Border>
        <Border Background="{StaticResource Dark}" Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                <Label Style="{StaticResource LabelElement}" Content="© INCAS 2024" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="40" VerticalContentAlignment="Center"/>
                <Image Height="30" Width="30" Source="/Core/Views/Windows/Logo.png" UseLayoutRounding="False" RenderOptions.BitmapScalingMode="Fant" Stretch="UniformToFill" MouseDown="Logo_MouseDown" Margin="12,0,12,0"/>

                <Label Style="{StaticResource LabelElement}" Content="{Binding Version}" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Rectangle Fill="{DynamicResource Element}" Width="1" Margin="6"/>
                <Label Style="{StaticResource LabelElement}" Content="Все права защищены" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="40" Foreground="{DynamicResource Icon}" VerticalContentAlignment="Center">
                </Label>
            </StackPanel>
        </Border>
        <StackPanel Grid.Column="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Background="{StaticResource LightBlack}">
            
            <Button Style="{DynamicResource DashboardButton}" Command="{Binding OpenClipBoard}" CommandParameter="Clipboard" ToolTip="(F1) Открыть постоянный буфер обмена">
                <Path Fill="{DynamicResource DarkLight}" Height="25" Width="25" Stretch="Uniform" Data="M10 1.5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5zm-5 0A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5v1A1.5 1.5 0 0 1 9.5 4h-3A1.5 1.5 0 0 1 5 2.5zm-2 0h1v1A2.5 2.5 0 0 0 6.5 5h3A2.5 2.5 0 0 0 12 2.5v-1h1a2 2 0 0 1 2 2V14a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V3.5a2 2 0 0 1 2-2"/>
            </Button>
            <Rectangle Fill="{DynamicResource Element}" Height="1" Margin="6"/>
            <Button Style="{DynamicResource DashboardButton}" Command="{Binding CopyFile}" CommandParameter="Copy" ToolTip="(F2) Быстрая обработка каталогов">
                <Path Fill="{DynamicResource DarkLight}" Height="25" Width="25" Stretch="Uniform" Data="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1M.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8z"/>
            </Button>
            <Button Style="{DynamicResource DashboardButton}" Command="{Binding OpenFile}" CommandParameter="Pdf" ToolTip="(F3) Быстрая конвертация в PDF">
                <Path Fill="{DynamicResource DarkLight}" Height="25" Width="25" Stretch="Uniform" Data="M14 4.5V14a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V4.5h-2A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v9H2V2a2 2 0 0 1 2-2h5.5zM1.6 11.85H0v3.999h.791v-1.342h.803q.43 0 .732-.173.305-.175.463-.474a1.4 1.4 0 0 0 .161-.677q0-.375-.158-.677a1.2 1.2 0 0 0-.46-.477q-.3-.18-.732-.179m.545 1.333a.8.8 0 0 1-.085.38.57.57 0 0 1-.238.241.8.8 0 0 1-.375.082H.788V12.48h.66q.327 0 .512.181.185.183.185.522m1.217-1.333v3.999h1.46q.602 0 .998-.237a1.45 1.45 0 0 0 .595-.689q.196-.45.196-1.084 0-.63-.196-1.075a1.43 1.43 0 0 0-.589-.68q-.396-.234-1.005-.234zm.791.645h.563q.371 0 .609.152a.9.9 0 0 1 .354.454q.118.302.118.753a2.3 2.3 0 0 1-.068.592 1.1 1.1 0 0 1-.196.422.8.8 0 0 1-.334.252 1.3 1.3 0 0 1-.483.082h-.563zm3.743 1.763v1.591h-.79V11.85h2.548v.653H7.896v1.117h1.606v.638z"/>
            </Button>
            <Button Style="{DynamicResource DashboardButton}" Command="{Binding OpenFile}" CommandParameter="Word" ToolTip="(F4) Быстрое исправление файлов Word" Cursor="Hand">
                <Path Fill="{DynamicResource DarkLight}" Height="25" Width="25" Stretch="Uniform" Data="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M5.485 6.879l1.036 4.144.997-3.655a.5.5 0 0 1 .964 0l.997 3.655 1.036-4.144a.5.5 0 0 1 .97.242l-1.5 6a.5.5 0 0 1-.967.01L8 9.402l-1.018 3.73a.5.5 0 0 1-.967-.01l-1.5-6a.5.5 0 1 1 .97-.242z"/>
            </Button>
            <Button Style="{DynamicResource DashboardButton}" Command="{Binding OpenFile}" CommandParameter="Excel" ToolTip="(F5) Быстрое исправление файлов Excel">
                <Path Fill="{DynamicResource DarkLight}" Height="25" Width="25" Stretch="Uniform" Data="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M5.884 6.68 8 9.219l2.116-2.54a.5.5 0 1 1 .768.641L8.651 10l2.233 2.68a.5.5 0 0 1-.768.64L8 10.781l-2.116 2.54a.5.5 0 0 1-.768-.641L7.349 10 5.116 7.32a.5.5 0 1 1 .768-.64"/>
            </Button>
            <Rectangle Fill="{DynamicResource Element}" Height="1" Margin="6"/>
            <Button Style="{DynamicResource DashboardButton}" Command="{Binding OpenWeb}" CommandParameter="Web" ToolTip="Открыть справочную информацию">
                <Path Fill="{DynamicResource DarkLight}" Height="25" Width="25" Stretch="Uniform" Data="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2"/>
            </Button>
        </StackPanel>
        <StackPanel x:Name="ProcessInfo" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ProcessHandled}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ProcessHandled}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <Path Fill="{DynamicResource LightPurple}" Width="20" Height="20" Data="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z" VerticalAlignment="Center" Stretch="UniformToFill"/>

        </StackPanel>
    </Grid>
</Window>
