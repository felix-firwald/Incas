            </Button>
            <Button IsEnabled="False" Style="{DynamicResource ButtonSquare}" Command="{Binding OpenFile}" CommandParameter="Word" ToolTip="(F7) Быстрое исправление файлов Word" Cursor="Hand">
                <Path Fill="White" Stretch="Uniform" Data="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M5.485 6.879l1.036 4.144.997-3.655a.5.5 0 0 1 .964 0l.997 3.655 1.036-4.144a.5.5 0 0 1 .97.242l-1.5 6a.5.5 0 0 1-.967.01L8 9.402l-1.018 3.73a.5.5 0 0 1-.967-.01l-1.5-6a.5.5 0 1 1 .97-.242z"/>
            </Button>
            <Button IsEnabled="False" Style="{DynamicResource ButtonSquare}" Command="{Binding OpenFile}" CommandParameter="Excel" ToolTip="(F8) Быстрое исправление файлов Excel">
                <Path Fill="White" Stretch="Uniform" Data="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M5.884 6.68 8 9.219l2.116-2.54a.5.5 0 1 1 .768.641L8.651 10l2.233 2.68a.5.5 0 0 1-.768.64L8 10.781l-2.116 2.54a.5.5 0 0 1-.768-.641L7.349 10 5.116 7.32a.5.5 0 1 1 .768-.64"/>
            </Button>
            <Rectangle Fill="{DynamicResource Element}" Height="1" Margin="6"/>
            <Button Style="{DynamicResource ButtonSquare}" Command="{Binding OpenWeb}" CommandParameter="Web" ToolTip="Открыть справочную информацию">
                <Path Fill="White" Stretch="Uniform" Data="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2"/>
            </Button>
            <Button Style="{DynamicResource ButtonSquare}" Visibility="{Binding TestFunctionVisibility}"  ToolTip="Тестирование INCAS" Click="OpenTestClick">
                <Path Fill="White" Stretch="Uniform" Data="M523.85-480 284.54-722.62q-2.92-2.92-3.73-5.93t-.81-6.23v-9.24q0-6.83 4.64-11.4 4.65-4.58 11.51-4.58h359.23q10.26 0 17.44 7.21 7.18 7.2 7.18 17.5 0 10.29-7.18 17.79t-17.44 7.5h-291.3l202.46 207.15q9.15 9.4 9.15 22.7 0 13.3-9.15 23L364.08-249.23h291.3q10.26 0 17.44 7.2 7.18 7.21 7.18 17.51 0 10.29-7.18 17.4-7.18 7.12-17.44 7.12H291.31q-4.68 0-8-3.31-3.31-3.32-3.31-8v-16.74q0-2.64.8-4.44.81-1.8 2.82-3.43L523.85-480Z"/>
            </Button>
        </StackPanel>
        <StackPanel x:Name="ProcessInfo" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ProcessHandled}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ProcessHandled}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <Path Fill="{DynamicResource LightPurple}" Width="20" Height="20" Data="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z" VerticalAlignment="Center" Stretch="UniformToFill"/>

        </StackPanel>
    </Grid>
</Window>
