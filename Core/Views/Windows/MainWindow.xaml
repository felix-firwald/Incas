            </Button>
            <Rectangle Fill="{DynamicResource Element}" Height="1" Margin="6"/>
            <Button Style="{DynamicResource ButtonSquare}" Command="{Binding OpenTextEditor}" CommandParameter="TE" ToolTip="(F4) Открыть редактор текста">
                <Path Fill="White" Stretch="Uniform" Data="M2 12.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5m0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m4-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5"/>
            </Button>
            <Button Style="{DynamicResource ButtonSquare}" Command="{Binding OpenFileManager}" CommandParameter="Copy" ToolTip="(F5) Быстрая обработка каталогов и файлов">
