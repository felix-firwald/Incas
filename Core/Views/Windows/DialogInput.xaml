        <Path Grid.RowSpan="2" Stretch="Uniform" StrokeDashOffset="3" Margin="12" Data="M10 5h4a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1h-4v1h4a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-4zM6 5V4H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v-1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1z" Fill="{DynamicResource LightPurple}" />
        
        <TextBox x:Name="InputValue" Style="{DynamicResource TextBoxBig}" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Tag="Введите значение" TextChanged="InputValue_TextChanged"/>
        <Rectangle Grid.Row="3" Fill="{DynamicResource Element}" Grid.ColumnSpan="2"/>
        <Button Style="{DynamicResource ButtonMain}" Grid.Row="4" IsDefault="True" Grid.ColumnSpan="2" Margin="5,5,5,5" Click="Button_Click">
            <StackPanel Orientation="Horizontal">
                <Path 
            Data="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" VerticalAlignment="Center" Fill="White" UseLayoutRounding="False" SnapsToDevicePixels="False"
                />
