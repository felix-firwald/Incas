<UserControl x:Class="Incubator_2.Forms.UC_ReplaceFileName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incubator_2.Forms" xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Left" Style="{DynamicResource TextBoxMain}" Tag="Исходное значение" Grid.Column="0"/>
        <fa:FontAwesome Icon="ArrowRight" Grid.Column="1" Foreground="{DynamicResource Icon}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
        <TextBox x:Name="Right" Style="{DynamicResource TextBoxMain}" Tag="Результат" Grid.Column="2"/>
    </Grid>
</UserControl>
