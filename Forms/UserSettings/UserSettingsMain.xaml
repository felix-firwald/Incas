             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incubator_2.Forms.UserSettings" xmlns:oneinstance="clr-namespace:Incubator_2.Forms.OneInstance"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Style="{DynamicResource MainGroupBox}" Header="ПОЛЬЗОВАТЕЛЬСКИЕ НАСТРОЙКИ">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2">
                <Button Style="{DynamicResource ButtonMain}" Content="Сменить пароль" Click="SetPasswordClick"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
