<UserControl x:Class="Incubator_2.Forms.AdminPanel.SectorElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incubator_2.Forms.AdminPanel" xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="40" MinHeight="40" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Label Style="{DynamicResource LabelElement}" Content="{Binding SectorName}"/>
        <fa:FontAwesome Style="{DynamicResource IconButton}" Icon="Pencil" Grid.Column="1" MouseDown="EditClick"/>
        <fa:FontAwesome Style="{DynamicResource IconButton}" Icon="Remove" IsEnabled="{Binding CanDelete}" Grid.Column="2" MouseDown="DeleteClick"/>
    </Grid>
</UserControl>
