<UserControl x:Class="Incubator_2.Forms.Database.CustomDatabaseMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incubator_2.Forms.Database" xmlns:oneinstance="clr-namespace:Incubator_2.Forms.OneInstance"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Style="{DynamicResource MainGroupBox}" Header="БАЗА ДАННЫХ">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="TablesList" Style="{DynamicResource ListBoxMain}" ItemsSource="{Binding Tables}" SelectedItem="{Binding SelectedTable}" Background="{x:Null}">
                
            </ListBox>
            <DataGrid Style="{DynamicResource DataGridMain}" Grid.Column="1" ItemsSource="{Binding Table}">
                
            </DataGrid>
        </Grid>
    </GroupBox>
</UserControl>
