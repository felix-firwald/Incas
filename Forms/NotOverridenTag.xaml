<UserControl x:Class="Incubator_2.Forms.NotOverridenTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incubator_2.Forms" xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="240">
    <Border Background="{DynamicResource Dark}" CornerRadius="5" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="TagName" Content="Имя тега" Style="{DynamicResource LabelElement}" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <fa:FontAwesome x:Name="Override" Style="{DynamicResource IconButton}" Icon="ArrowCircleRight" Grid.Column="1" ToolTip="Переопределить тег" MouseDown="OverrideClick" />
        </Grid>
    </Border>
</UserControl>
