<Window x:Class="Incubator_2.Windows.UserSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incubator_2.Windows"
        mc:Ignorable="d"
        Title="Выбор пользователя" Height="250" MaxHeight="500" Width="400" Style="{DynamicResource CentralWindow}" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <ListBox Style="{DynamicResource ListBoxMain}" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" DisplayMemberPath="fullname" ItemContainerStyle="{DynamicResource ListBoxItemMicro}"/>
        <Button Style="{DynamicResource ButtonMain}" Content="Выбрать" IsDefault="True" Grid.Row="1" Click="Button_Click"/>
    </Grid>
</Window>
