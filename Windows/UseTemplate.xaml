<Window x:Class="Incubator_2.Windows.UseTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incubator_2.Windows"
        mc:Ignorable="d"
        Title="Создать документы по шаблону" Height="450" Width="800" Style="{DynamicResource WindowBase}" MinWidth="500" MinHeight="450" Topmost="True" Uid="8">

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!--префикс и постфикс-->
                <RowDefinition Height="40"/>
                <!--конечная папка и обзор-->
                <RowDefinition Height="40"/>
                <!--панель работы с тегами-->
                <RowDefinition Height="*"/>
                <!--таблица с тегами-->
                <RowDefinition Height="40"/>
                <!--кнопка создания файла или печати-->
            </Grid.RowDefinitions>
            <Button Style="{StaticResource ButtonMain}" Grid.Row="4" Content="Создать файл по шаблону" Click="CreateFileClick" Grid.ColumnSpan="3" Margin="5,5,5,5"/>
            <TextBox Style="{DynamicResource TextBoxMain}" Margin="5,5,5,5" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalContentAlignment="Left" Tag="Префикс к имени файла"/>
            <TextBox Style="{DynamicResource TextBoxMain}" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalContentAlignment="Left" Tag="Постфикс к имени файла" Grid.Column="2"/>
            <ComboBox Style="{DynamicResource ComboBoxMain}" Grid.Row="2" Grid.Column="2" Margin="5,5,5,5" >
                <ComboBoxItem IsSelected="True" Content="Основной"/>
            </ComboBox>
            <DataGrid Style="{DynamicResource DataGridMain}" 
                Grid.Row="3"
                x:Name="DGV" Grid.ColumnSpan="3" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="Имя файла"
                        MinWidth="100">
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Header="Профиль"
                        MinWidth="100">
                    </DataGridTextColumn>
                </DataGrid.Columns>

            </DataGrid>

        </Grid>
    </Border>
</Window>
