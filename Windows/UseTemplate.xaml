<Window x:Class="Incubator_2.Windows.UseTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incubator_2.Windows"
        mc:Ignorable="d"
        Title="Создать документы по шаблону" Height="450" Width="800" Background="{x:Null}" MinWidth="500" MinHeight="450">
    <Window.Style>
        <Style>
            
        </Style>
    </Window.Style>
    <Border Background="#FF2F3239">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/> <!--префикс и постфикс-->
                <RowDefinition Height="40"/> <!--конечная папка и обзор-->
                <RowDefinition Height="40"/> <!--панель работы с тегами-->
                <RowDefinition Height="*"/> <!--таблица с тегами-->
                <RowDefinition Height="40"/> <!--кнопка создания файла или печати-->
            </Grid.RowDefinitions>
            <Button Style="{StaticResource ButtonGray}" Grid.Row="4" Content="Создать файл по шаблону" Click="CreateFileClick"/>
            <TextBox Style="{DynamicResource TextBoxMain}" HorizontalAlignment="Left" Margin="70,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120"/>
        </Grid>
    </Border>
</Window>
