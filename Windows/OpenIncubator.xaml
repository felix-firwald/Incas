        <Button Style="{StaticResource ButtonGray}" Content="Войти в инкубатор" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="410" Height="30" Click="LogInClicked"/>

    </Grid>
</Window>
