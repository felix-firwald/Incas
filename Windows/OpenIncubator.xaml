<Window x:Class="Incubator_2.Windows.OpenIncubator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incubator_2.Windows"
        mc:Ignorable="d"
        Title="Выбор инкубатора" Height="250" Width="450" MinHeight="250" MinWidth="400" MaxHeight="250" MaxWidth="450" WindowStartupLocation="CenterScreen" WindowState="Minimized" Background="#2F3239" ResizeMode="NoResize" Icon="/Windows/Logo.png" Closing="OnClose" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="375"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Style="{StaticResource TextBoxMain}" Grid.Row="2"  Tag="Путь к инкубатору" HorizontalContentAlignment="Left" />
        <TextBox Style="{StaticResource TextBoxMain}" Grid.Row="3" Grid.ColumnSpan="2" Tag="Пароль для входа" />
        <Button Style="{StaticResource ButtonMain}" Grid.Row="4" Grid.ColumnSpan="2" Content="Войти в инкубатор"  VerticalAlignment="Center" Click="LogInClicked"/>
        <Button Style="{StaticResource ButtonMain}" Content="..." Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Click="PathReview" Height="30"/>
        <ComboBox Style="{StaticResource ComboBoxMain}" Grid.Row="1" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="195" Margin="5,0,0,0">
            <ComboBoxItem Content="Тонкий клиент"/>
            <Separator/>
            <ComboBoxItem Content="Толстый клиент"/>
        </ComboBox>
        <CheckBox Style="{StaticResource Toggle}" Content="CheckBox" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" IsChecked="True" Grid.Column="1" Grid.Row="1"/>
        <CheckBox Style="{StaticResource CheckBoxMain}" Content="CheckBox" HorizontalAlignment="Left" Margin="300,0,0,0" Grid.Row="1" VerticalAlignment="Center" IsChecked="True"/>

    </Grid>
</Window>
