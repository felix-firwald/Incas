<Window x:Class="Incubator_2.Windows.SessionBroken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incubator_2.Windows" xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Соединение разорвано" Height="350" Width="400" Style="{DynamicResource Dialog}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
            <RowDefinition Height="6*"/>

        </Grid.RowDefinitions>
        <fa:FontAwesome Icon="FrownOutline" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="{DynamicResource Icon}" FontSize="36"/>
        <Label Style="{DynamicResource LabelElement}" Content="Сессия была принудительно завершена" HorizontalAlignment="Center" Grid.Row="1" Width="262" FontWeight="Bold" />
        <Label Style="{DynamicResource LabelElement}" Content="Это окно закроется автоматически" HorizontalAlignment="Center" Grid.Row="2" Width="240" />
    </Grid>
</Window>
