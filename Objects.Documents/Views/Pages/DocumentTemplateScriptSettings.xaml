        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="109*"/>
        </Grid.ColumnDefinitions>
        <Border>
            <StackPanel>
                <Border Style="{StaticResource ToolBorder}">
