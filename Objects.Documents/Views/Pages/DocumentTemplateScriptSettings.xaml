             xmlns:local="clr-namespace:Incas.Objects.Documents.Views.Pages" xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
