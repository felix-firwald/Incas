<Window x:Class="Incas.Objects.Documents.Views.Windows.TemplateFileTagsImporter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incas.Objects.Documents.Views.Windows" xmlns:converters="clr-namespace:Incas.Objects.Documents.Converters"
        mc:Ignorable="d" 
        Title="Анализ и распределение тегов" Height="450" Width="600" ResizeMode="NoResize" Background="{StaticResource Black}" WindowStartupLocation="CenterScreen" Style="{StaticResource WindowBase}">
    <Window.Resources>
        <ResourceDictionary>
            <converters:TagTargetToTextConverter x:Key="TagTargetToTextConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListBox Style="{StaticResource ListBoxMain}" ItemsSource="{Binding FoundItems}" ItemContainerStyle="{StaticResource ListBoxItemUnvisibleBorders}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBox Style="{StaticResource TextBoxMain}" Text="{Binding Name, Mode=OneWay}" IsReadOnly="True"/>
                        <ComboBox Style="{StaticResource ComboBoxMain}" Grid.Column="1" ItemsSource="{Binding AvailableTargets}" SelectedItem="{Binding Target}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="{StaticResource Rubik}" Foreground="White" Text="{Binding ., Converter={StaticResource TagTargetToTextConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,0,0,0">
            <Button Style="{DynamicResource ButtonRectangle}" Background="{StaticResource Dark}" VerticalAlignment="Center" IsDefault="True" Click="SaveClick" Grid.Row="3">
                <StackPanel Orientation="Horizontal" Margin="5,0,5,0">
                    <Path Fill="{StaticResource Buttons.Green}" Data="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" VerticalAlignment="Center"/>
                    <Label Foreground="White" Content="Импортировать результат"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
