<Window x:Class="Incas.CustomDatabases.Views.Windows.CreateRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Incas.CustomDatabases.Views.Windows"
        mc:Ignorable="d"
        Title="Создание записи" Height="450" Width="500" Style="{DynamicResource WindowBase}" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="ContentPanel" Grid.ColumnSpan="2">

        </StackPanel>
        <Button Style="{DynamicResource ButtonMain}" Content="Сохранить и закрыть" Grid.Row="1" Click="SaveAndCloseClick" Margin="5,5,5,5" IsDefault="True"/>
        <Button x:Name="SaveButton" Style="{DynamicResource ButtonMain}" Content="Сохранить" Grid.Row="1" Click="SaveClick" Margin="5,5,5,5" Grid.Column="1"/>
    </Grid>
</Window>
