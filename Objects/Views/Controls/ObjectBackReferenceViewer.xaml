<UserControl x:Class="Incas.Objects.Views.Controls.ObjectBackReferenceViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incas.Objects.Views.Controls" xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="40" MinHeight="40" d:DesignWidth="400">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="40"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource TextBlockMain}" Text="Обратные ссылки" VerticalAlignment="Center" Foreground="{DynamicResource GrayLight}" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow" Margin="5,0,0,0" FontSize="11"/>
        <TextBlock x:Name="FieldValue" Style="{StaticResource TextBlockMain}" Cursor="Hand" ToolTipService.InitialShowDelay="180" Text="нажать для просмотра" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryMain}" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow" MouseDown="FieldValue_MouseDown" FontSize="11"/>
        <TextBlock x:Name="FieldValue2" Visibility="Collapsed" Style="{StaticResource TextBlockMain}" Cursor="Hand" ToolTipService.InitialShowDelay="180" Text="нажать, чтобы скрыть" FontSize="11" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryMain}" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow" MouseDown="FieldValue_MouseDown"/>
        <StackPanel x:Name="ContentPanel" Grid.Row="1" Grid.ColumnSpan="2">
            
        </StackPanel>
        <Rectangle x:Name="Separator" Height="1" VerticalAlignment="Bottom" Fill="{DynamicResource Basic}" Grid.ColumnSpan="3" Grid.Row="1"/>
    </Grid>
</UserControl>
