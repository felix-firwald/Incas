<UserControl x:Class="Incas.Objects.Views.Pages.CustomDatabaseMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incas.Objects.Views.Pages" xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1200" Cursor="">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MaxWidth="450"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="{Binding CategoryName}" Margin="5,5,5,5">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.RowSpan="3">
                <StackPanel>
                    <Button Style="{StaticResource ButtonRectangle}" Click="Button_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path Fill="DodgerBlue" Margin="2" Stretch="Uniform" VerticalAlignment="Center" Data="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41m-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9 M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5 5 0 0 0 8 3M3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9z"/>
                            <Label Content="Обновить список" VerticalAlignment="Center" Padding="5,0,5,0" Foreground="DodgerBlue"/>
                        </StackPanel>
                    </Button>
                    <Expander x:Name="CategoriesList" Style="{DynamicResource ExpanderMain}" Header="Категории" IsExpanded="True">
                        <StackPanel MaxWidth="320">
                            <ListBox 
                                Style="{DynamicResource ListBoxMain}"
                                ItemContainerStyle="{DynamicResource ListBoxItemPurple}"
                                ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" Background="{x:Null}" Grid.RowSpan="2" Margin="0,-2,0,-2" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            </ListBox>
                        </StackPanel>
                    </Expander>
                    <ListBox Style="{DynamicResource ListBoxMain}" MaxWidth="450" Background="{StaticResource Black}" ItemsSource="{Binding Classes}" SelectedItem="{Binding SelectedClass}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" DisplayMemberPath="Name" Grid.RowSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource ListBoxItemGray}">
                                <Setter Property="MaxWidth" Value="260"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
        <GridSplitter/>
        <GroupBox x:Name="ContentPanel" Grid.Column="1" Header="{Binding SelectedClassName}" Margin="5,5,5,5">
        </GroupBox>
    </Grid>
</UserControl>
