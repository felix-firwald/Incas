                    </Button>
                    <Button Style="{StaticResource ButtonSquare}" Background="{StaticResource Black}" ToolTip="Парсинг (обратная шаблонизация)">
                        <Path Fill="#FFBAFF78" VerticalAlignment="Center" Stretch="Uniform" Data="M5.1725,20.3615a1.52,1.52,0,0,1-1.534-1.5337V6.1723A1.52,1.52,0,0,1,5.177,4.6385h9.2585v.923H5.177a.5923.5923,0,0,0-.6155.6155V18.823a.5923.5923,0,0,0,.6155.6155H17.823a.5923.5923,0,0,0,.6155-.6155V9.5645h.923V18.823a1.52,1.52,0,0,1-1.5337,1.5385ZM7.323,16.923h.9232V11.0462H7.323Zm3.7232,0h.923V8.077h-.923Zm3.7075,0h.9233V14.0155h-.9233Zm2.7-8.3923V6.5462H15.4692V5.623h1.9845V3.6385h.9233V5.623h1.9845v.9232H18.377V8.5307Z"/>
                    </Button>
                    <!--<fa:FontAwesome Style="{StaticResource IconButton}" Icon="ArrowRight" Grid.Column="1" Grid.Row="1" MouseDown="SendToExcel" ToolTip="Вытянуть в Excel" />-->

                    <Button Style="{StaticResource ButtonSquare}" Background="{StaticResource Black}" Click="SendToExcel" ToolTip="Вытянуть в Excel">
