                                                        <Label Content="{Binding ., Converter={StaticResource BindingConstraintTypeToTextConverter}}" Style="{DynamicResource LabelElement}" FontSize="11"/>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </Grid>
